<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.deinvesa.taxi.taxiya.Logueo_App"
    android:background="@color/background_floating_material_dark">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importar desde Facebook"
        android:id="@+id/button"
        android:background="#1a1dd8"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginTop="66dp"
        android:background="@drawable/usuario"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/telefono"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@android:drawable/ic_dialog_email"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:background="@drawable/bloqueado"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:id="@+id/button2"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/button2"
        android:layout_alignBottom="@+id/imageView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Nombre"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textColorHint="@color/abc_primary_text_material_dark"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Telefono"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textColorHint="@color/abc_primary_text_material_dark"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignEnd="@+id/editText3"
        android:layout_toEndOf="@+id/imageView2"
        android:inputType="phone|textPhonetic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:hint="Correo"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textColorHint="@color/abc_primary_text_material_dark"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:inputType="textWebEmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:hint="Contraseña"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textColorHint="@color/abc_primary_text_material_dark"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:inputType="textPassword"
        android:maxLength="6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Al concluir con el proceso usted declara que ha leído y acepta los Términos y Condiciones de Uso."
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editText4"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:gravity="center_vertical" />

</RelativeLayout>
